<div class="project-list">

  {{#each this.model as |project|}}
    <button
      class="project-button {{if project.active "active"}}"
      {{action "launchProject" project}}
    >
      {{project.title}}
    </button>
  {{/each}}

</div>

<div class="project-container">

  {{#if projectToDisplay}}
      <ProjectCardNew @project={{projectToDisplay}} />
  {{else}}
      <ProjectCardNew @project={{selectedProject}} />
  {{/if}}

</div>



